<a href="/Genre/add-genre" class="btn btn-success mb-3">New Genre</a>

<div class="row">
    {{#each genres}}
    <div class="col-md-4 mb-3">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">{{this.name}}</h5>
                <div class="d-flex  flex-row-reverse gap-1">
                    <form action="/Genre/delete-genre" method="POST" onsubmit="return confirm('You sure you want to delete the genre?');">
                        <input type="hidden" name="id" id="id" value="{{this.id}}"/>
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                    <a href="/Genre/update-genre/{{this.id}}" class="btn btn-info">Edit</a>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</div>