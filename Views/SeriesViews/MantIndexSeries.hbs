<a href="/series/add-series" class="btn btn-success mb-3">New Series</a>

{{#if IsEmpty}}
    <h1 class="text-center">There is no series</h1>
{{else}}
    <div class="row">
        {{#each series}}
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <a href="/series/detail-series/{{this.id}}">
                        <img src="{{img}}" alt="{{name}}" class="card-img-top">
                    </a>
                    <div class="card-body">
                        <h5 class="card-title">{{this.name}}</h5>
                        <p class="card-text">{{this.genre}}</p>
                    </div>
                    <div class="card-footer text-center">
                        <form action="/series/delete-series" style="display: inline;" method="POST" onsubmit="return confirm('You sure you want to delete the series?');">
                            <input type="hidden" name="id" value="{{this.id}}"/>
                            <button type="submit" class="btn btn-danger me-2">Delete</button>
                        </form>
                        <a href="/series/update-series/{{this.id}}" class="btn btn-info">Edit</a>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
{{/if}}